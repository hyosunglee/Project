run = "python3.11 server.py"
modules = ["nodejs-20", "nix", "web", "python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt", "pkg-config", "xsimd"]

[[ports]]
localPort = 3000
externalPort = 3000

[agent]
expertMode = true
integrations = ["github:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "server"

[[workflows.workflow]]
name = "server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py & sleep 5 && python auto_initialize.py"
waitForPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "PORT=5000 gunicorn --bind=0.0.0.0:5000 --reuse-port --workers 2 server:app & GU_PID=$!; sleep 5; PORT=5000 python auto_initialize.py || true; wait $GU_PID"]
